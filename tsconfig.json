{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@/*": ["client/src/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "client/src/**/*",
    "server/**/*",
    "shared/**/*",
    "drizzle/**/*"
  ],
  "exclude": ["node_modules"]
}
